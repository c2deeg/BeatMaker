<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#E846CE" android:gradientRadius="100dp" android:startColor="#E846CE" android:type="radial" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="#E846CE" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/colorBlueBase" android:gradientRadius="100dp" android:startColor="@color/colorBlueLight" android:type="radial" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/colorBlueBase" />
        </shape>
    </item>

</selector>